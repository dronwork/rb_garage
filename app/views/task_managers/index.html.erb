<h1>Task Manager</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_managers.each do |task_manager| %>
      <tr>
        <td><%= task_manager.title %></td>
        <td><%= link_to 'Show', task_manager %></td>
        <td><%= link_to 'Edit', edit_task_manager_path(task_manager) %></td>
        <td><%= link_to 'Destroy', task_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task Manager', new_task_manager_path %>
